<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/test_control_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/stats_box_margin"
            android:layout_marginTop="@dimen/start_test_top_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/starting_sensors_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/startingSensors" />

            <ProgressBar
                android:id="@+id/starting_sensors_progressbar"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/start_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/stats_test_button_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/small_button_shadow"
                android:drawablePadding="@dimen/button_drawable_padding"
                android:drawableStart="@drawable/btn_check_buttonless_on"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textColor="@color/instruction_grey"
                android:textSize="@dimen/stat_button_text_size"
                android:visibility="gone" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/stats_test_button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/save_button_left_margin"
                android:background="@drawable/disabled_small_button_shadow"
                android:drawablePadding="@dimen/button_drawable_padding"
                android:drawableStart="@drawable/save"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/instruction_grey"
                android:textSize="@dimen/stat_button_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/stats_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/stats_box_margin"
                android:layout_marginStart="@dimen/stats_box_margin"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/test_control_linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/stats_box_margin"
                android:layout_marginStart="@dimen/stats_box_margin"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/accel_individual_axes_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/individualAxes" />

                <CheckBox
                    android:id="@+id/accel_x_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="gone"
                    android:text="@string/xAxisData" />

                <CheckBox
                    android:id="@+id/accel_y_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="gone"
                    android:text="@string/yAxisData" />

                <CheckBox
                    android:id="@+id/accel_z_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="gone"
                    android:text="@string/zAxisData" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/stats_box_margin"
                android:layout_marginEnd="@dimen/stats_box_margin"
                android:layout_marginStart="@dimen/stats_box_margin"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/accel_stats_linear_layout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/stats_graph_height"
                    android:layout_marginEnd="@dimen/stats_box_margin"
                    android:layout_weight="7"
                    android:background="@drawable/stats_card_shadow"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/stats_box_inner_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/stats_box_inner_padding"
                        android:text="@string/accelChartTitle"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/stats_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="@dimen/stats_separator_margin"
                        android:layout_marginTop="@dimen/stats_separator_margin"
                        android:background="@color/light_grey"
                        android:paddingStart="@dimen/stats_box_inner_padding" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/accel_stats_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/stats_card_shadow"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/stats_box_inner_padding"
                    android:paddingTop="@dimen/stats_box_inner_padding">

                    <LinearLayout
                        android:id="@+id/accel_xyz_stats_box_linear_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/topAccelXYZ"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/stats_text_size" />

                            <View
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/primary_blue" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/stats_separator_margin"
                            android:layout_marginTop="@dimen/stats_separator_margin"
                            android:background="@color/light_grey" />

                        <TextView
                            android:id="@+id/top_accel_xyz_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/stats_bottom_margin"
                            android:layout_marginEnd="@dimen/stats_right_margin"
                            android:textColor="@color/primary_blue"
                            android:textSize="@dimen/stats_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accel_x_stats_box_linear_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/topAccelX"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/stats_text_size" />

                            <View

                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/red" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/stats_separator_margin"
                            android:layout_marginTop="@dimen/stats_separator_margin"
                            android:background="@color/light_grey" />


                        <TextView
                            android:id="@+id/top_accel_x_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/stats_bottom_margin"
                            android:layout_marginEnd="@dimen/stats_right_margin"
                            android:textColor="@color/primary_blue"
                            android:textSize="@dimen/stats_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accel_y_stats_box_linear_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/topAccelY"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/stats_text_size" />

                            <View

                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/green" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/stats_separator_margin"
                            android:layout_marginTop="@dimen/stats_separator_margin"
                            android:background="@color/light_grey" />

                        <TextView
                            android:id="@+id/top_accel_y_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/stats_bottom_margin"
                            android:layout_marginEnd="@dimen/stats_right_margin"
                            android:textColor="@color/primary_blue"
                            android:textSize="@dimen/stats_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accel_z_stats_box_linear_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/topAccelZ"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/stats_text_size" />

                            <View

                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/magenta" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/stats_separator_margin"
                            android:layout_marginTop="@dimen/stats_separator_margin"
                            android:background="@color/light_grey" />

                        <TextView
                            android:id="@+id/top_accel_z_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/stats_bottom_margin"
                            android:layout_marginEnd="@dimen/stats_right_margin"
                            android:textColor="@color/primary_blue"
                            android:textSize="@dimen/stats_text_size" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/stats_box_margin"
                android:layout_marginStart="@dimen/stats_box_margin"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/speed_individual_axes_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/individualAxes" />

                <CheckBox
                    android:id="@+id/speed_x_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="gone"
                    android:text="@string/xAxisData" />

                <CheckBox
                    android:id="@+id/speed_y_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="gone"
                    android:text="@string/yAxisData" />

                <CheckBox
                    android:id="@+id/speed_z_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="gone"
                    android:text="@string/zAxisData" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/stats_box_margin"
                android:layout_marginEnd="@dimen/stats_box_margin"
                android:layout_marginStart="@dimen/stats_box_margin"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/speed_stats_linear_layout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/stats_graph_height"
                    android:layout_marginEnd="@dimen/stats_box_margin"
                    android:layout_weight="7"
                    android:background="@drawable/stats_card_shadow"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/stats_box_inner_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/stats_box_inner_padding"
                        android:text="@string/speedChartTitle"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/stats_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="@dimen/stats_separator_margin"
                        android:layout_marginTop="@dimen/stats_separator_margin"
                        android:background="@color/light_grey"
                        android:paddingStart="@dimen/stats_box_inner_padding" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/speed_stats_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/stats_card_shadow"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/stats_box_inner_padding"
                    android:paddingTop="@dimen/stats_box_inner_padding">

                    <LinearLayout
                        android:id="@+id/speed_xyz_stats_box_linear_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/topSpeedXYZ"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/stats_text_size" />

                            <View

                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/primary_blue" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/stats_separator_margin"
                            android:layout_marginTop="@dimen/stats_separator_margin"
                            android:background="@color/light_grey" />

                        <TextView
                            android:id="@+id/top_speed_xyz_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/stats_bottom_margin"
                            android:layout_marginEnd="@dimen/stats_right_margin"
                            android:textColor="@color/primary_blue"
                            android:textSize="@dimen/stats_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/speed_x_stats_box_linear_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/topSpeedX"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/stats_text_size" />

                            <View

                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/red" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/stats_separator_margin"
                            android:layout_marginTop="@dimen/stats_separator_margin"
                            android:background="@color/light_grey" />

                        <TextView
                            android:id="@+id/top_speed_x_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/stats_bottom_margin"
                            android:layout_marginEnd="@dimen/stats_right_margin"
                            android:textColor="@color/primary_blue"
                            android:textSize="@dimen/stats_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/speed_y_stats_box_linear_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/topSpeedY"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/stats_text_size" />

                            <View

                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/green" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/stats_separator_margin"
                            android:layout_marginTop="@dimen/stats_separator_margin"
                            android:background="@color/light_grey" />

                        <TextView
                            android:id="@+id/top_speed_y_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/stats_bottom_margin"
                            android:layout_marginEnd="@dimen/stats_right_margin"
                            android:textColor="@color/primary_blue"
                            android:textSize="@dimen/stats_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/speed_z_stats_box_linear_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/topSpeedZ"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/stats_text_size" />

                            <View

                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/magenta" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/stats_separator_margin"
                            android:layout_marginTop="@dimen/stats_separator_margin"
                            android:background="@color/light_grey" />

                        <TextView
                            android:id="@+id/top_speed_z_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/stats_bottom_margin"
                            android:layout_marginEnd="@dimen/stats_right_margin"
                            android:textColor="@color/primary_blue"
                            android:textSize="@dimen/stats_text_size" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/stats_box_margin"
                android:layout_marginEnd="@dimen/stats_box_margin"
                android:layout_marginStart="@dimen/stats_box_margin"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/rotation_stats_linear_layout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/stats_graph_height"
                    android:layout_marginEnd="@dimen/stats_box_margin"
                    android:layout_weight="7"
                    android:background="@drawable/stats_card_shadow"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/stats_box_inner_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/stats_box_inner_padding"
                        android:text="@string/rotationChartTitle"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/stats_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="@dimen/stats_separator_margin"
                        android:layout_marginTop="@dimen/stats_separator_margin"
                        android:background="@color/light_grey"
                        android:paddingStart="@dimen/stats_box_inner_padding" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/rotation_stats_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/stats_card_shadow"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/stats_box_inner_padding"
                    android:paddingTop="@dimen/stats_box_inner_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/topRotation"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/stats_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="@dimen/stats_separator_margin"
                        android:layout_marginTop="@dimen/stats_separator_margin"
                        android:background="@color/light_grey" />

                    <TextView
                        android:id="@+id/top_rotation_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="@dimen/stats_bottom_margin"
                        android:layout_marginEnd="@dimen/stats_right_margin"
                        android:textColor="@color/primary_blue"
                        android:textSize="@dimen/stats_text_size" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/loading_screen_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/transparent_grey"
            android:layout_alignParentTop="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/loadingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/loading"
                android:textColor="@color/white"
                android:textSize="22sp"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

