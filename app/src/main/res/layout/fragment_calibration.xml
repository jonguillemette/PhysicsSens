<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/test_control_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/stats_box_margin"
            android:layout_marginTop="@dimen/start_test_top_margin"
            android:orientation="horizontal">


            <Button
                android:id="@+id/start_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/stats_test_button_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/small_button_shadow"
                android:drawablePadding="@dimen/button_drawable_padding"
                android:drawableStart="@drawable/btn_check_buttonless_on"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textColor="@color/instruction_grey"
                android:textSize="@dimen/stat_button_text_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/stats_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/stats_box_margin"
                android:layout_marginStart="@dimen/stats_box_margin"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/test_control_linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calibrate_shot"
                android:id="@+id/calibrate_button" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calibrate_progress"
                android:indeterminate="false" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calibrate_centrifuge"
                android:id="@+id/calibrate_centrifuge_button" />

            <LinearLayout
                android:layout_below="@+id/test_control_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                android:id="@+id/peak_acc_label"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/stats_test_button_height"
                android:checked="false"
                android:text="@string/peak_acc"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:textColor="@color/instruction_grey"
                android:textSize="@dimen/stat_button_text_size"
                android:layout_marginEnd="@dimen/stats_box_margin"
                android:layout_marginStart="@dimen/stats_box_margin"
                />

                <TextView
                    android:id="@+id/peak_acc_number"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stats_test_button_height"
                    android:checked="false"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/instruction_grey"
                    android:textSize="@dimen/stat_button_text_size"
                    android:layout_marginEnd="@dimen/stats_box_margin"
                    android:layout_marginStart="@dimen/stats_box_margin"
                    />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/peak_acc_seekbar"
                    android:layout_weight="1"
                    android:max="20" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/test_control_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stick_acc_label"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stats_test_button_height"
                    android:checked="false"
                    android:text="@string/stick_acc"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/instruction_grey"
                    android:textSize="@dimen/stat_button_text_size"
                    android:layout_marginEnd="@dimen/stats_box_margin"
                    android:layout_marginStart="@dimen/stats_box_margin"
                    />

                <TextView
                    android:id="@+id/stick_acc_number"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stats_test_button_height"
                    android:checked="false"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/instruction_grey"
                    android:textSize="@dimen/stat_button_text_size"
                    android:layout_marginEnd="@dimen/stats_box_margin"
                    android:layout_marginStart="@dimen/stats_box_margin"
                    />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stick_acc_seekbar"
                    android:layout_weight="1"
                    android:max="20" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/test_control_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/release_acc_label"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stats_test_button_height"
                    android:checked="false"
                    android:text="@string/release_acc"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/instruction_grey"
                    android:textSize="@dimen/stat_button_text_size"
                    android:layout_marginEnd="@dimen/stats_box_margin"
                    android:layout_marginStart="@dimen/stats_box_margin"
                    />

                <TextView
                    android:id="@+id/release_acc_number"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stats_test_button_height"
                    android:checked="false"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/instruction_grey"
                    android:textSize="@dimen/stat_button_text_size"
                    android:layout_marginEnd="@dimen/stats_box_margin"
                    android:layout_marginStart="@dimen/stats_box_margin"
                    />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_acc_seekbar"
                    android:layout_weight="1"
                    android:max="20" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/test_control_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/points_board_label"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stats_test_button_height"
                    android:checked="false"
                    android:text="@string/points_board"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/instruction_grey"
                    android:textSize="@dimen/stat_button_text_size"
                    android:layout_marginEnd="@dimen/stats_box_margin"
                    android:layout_marginStart="@dimen/stats_box_margin"
                    />

                <TextView
                    android:id="@+id/points_board_number"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stats_test_button_height"
                    android:checked="false"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/instruction_grey"
                    android:textSize="@dimen/stat_button_text_size"
                    android:layout_marginEnd="@dimen/stats_box_margin"
                    android:layout_marginStart="@dimen/stats_box_margin"
                    />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/points_board_seekbar"
                    android:layout_weight="1"
                    android:max="20" />

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/loading_screen_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/transparent_grey"
            android:layout_alignParentTop="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/loadingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/loading"
                android:textColor="@color/white"
                android:textSize="22sp"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

