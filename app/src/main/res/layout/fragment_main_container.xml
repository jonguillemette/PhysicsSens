<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/action_bar_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <FrameLayout
        android:id="@+id/scan_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar_fragment_container"/>


    <FrameLayout
        android:id="@+id/home_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar_fragment_container"
        android:visibility="gone"
        />

    <FrameLayout
        android:id="@+id/history_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar_fragment_container"
        android:visibility="gone"
        />

    <FrameLayout
        android:id="@+id/stats_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar_fragment_container"
        android:visibility="gone"
        />

    <FrameLayout
        android:id="@+id/stick_hand_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar_fragment_container"
        android:visibility="gone"
        />

    <FrameLayout
        android:id="@+id/youtube_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar_fragment_container"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="800sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <fragment
                android:name="com.google.android.youtube.player.YouTubePlayerFragment"
                android:id="@+id/youtube_fragment"
                android:layout_width="800sp"
                android:layout_height="480sp"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="800sp"
                android:layout_height="wrap_content"
                android:id="@+id/youtube_cancel"/>
        </LinearLayout>
    </FrameLayout>




</RelativeLayout>